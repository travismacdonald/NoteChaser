<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="itemTitle">
        <item name="android:fontFamily">@font/rubik</item>
        <item name="android:textSize">@dimen/itemTitle_textSize</item>
        <item name="android:textColor">@color/itemTitle_textColor</item>
    </style>

    <style name="itemSummary">
        <item name="android:fontFamily">@font/rubik</item>
        <item name="android:textSize">@dimen/itemSummary_textSize</item>
        <item name="android:textColor">@color/itemSummary_textColor</item>
    </style>

    <style name="sessionPitch">
        <item name="android:fontFamily">@font/rubik</item>
        <item name="android:textSize">@dimen/pitchTextSize</item>
        <item name="android:textColor">@color/itemTitle_textColor</item>
    </style>

    <style name="sessionCountdown">
        <item name="android:fontFamily">@font/rubik</item>
        <item name="android:textSize">@dimen/pitchTextSize</item>
        <item name="android:textColor">@color/itemTitle_textColor</item>
    </style>

    <style name="playingQuestion">
        <item name="android:fontFamily">@font/rubik</item>
        <item name="android:textSize">@dimen/playingQuestionTextSize</item>
        <item name="android:textColor">@color/itemTitle_textColor</item>
    </style>

    <style name="questionCounter">
        <item name="android:fontFamily">@font/rubik</item>
        <item name="android:textSize">@dimen/questionCounterTextSize</item>
        <item name="android:textColor">@color/itemTitle_textColor</item>
    </style>

</resources>
