<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="obj"
            type="com.example.notechaser.data.exercisesetup.ExerciseSetupItem.Switch" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/settings_item_background"
        android:clickable="@{obj.isEnabled()}"
        android:onClick="@{() -> obj.setIsChecked(!obj.isChecked())}"
        app:is_visible="@{obj.isVisible()}">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/itemTextMargin"
            android:layout_marginTop="@dimen/itemSmallMargin"
            android:layout_marginEnd="@dimen/itemTextMargin"
            android:fontFamily="@font/rubik"
            android:text="@{obj.title}"
            android:textColor="@{obj.isEnabled() ? @color/itemTitleText : @color/itemTitleTextDisabled}"
            android:textSize="@dimen/itemTitleTextSize"
            app:layout_constraintBottom_toTopOf="@id/summary"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Paranoid Android" />

        <TextView
            android:id="@+id/summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/itemTextMargin"
            android:layout_marginEnd="@dimen/itemTextMargin"
            android:layout_marginBottom="@dimen/itemSmallMargin"
            android:fontFamily="@font/rubik"
            android:text="@{obj.summary}"
            android:textColor="@{obj.isEnabled() ? @color/itemSummaryText : @color/itemSummaryTextDisabled}"
            android:textSize="@dimen/itemSummaryTextSize"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title"
            tools:text="No Surprises" />

        <ImageView
            android:id="@+id/icon"
            android:layout_width="@dimen/itemIconSize"
            android:layout_height="@dimen/itemIconSize"
            android:layout_marginStart="@dimen/itemSmallMargin"
            android:layout_marginEnd="@dimen/itemSmallMargin"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/ic_music_note_black_40dp" />

        <!-- TODO: Perhaps later this have a bit more customization -->
        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switchWidget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/itemSmallMargin"
            android:checked="@{obj.isChecked()}"
            android:clickable="false"
            android:enabled="@{obj.isEnabled()}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:useMaterialThemeColors="false" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>