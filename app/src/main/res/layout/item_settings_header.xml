<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="obj"
            type="com.example.notechaser.data.exercisesetup.ExerciseSetupItem.Header" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/headerHeight"
        android:background="@color/headerBackground"
        android:visibility="@{obj.isVisible() ? View.VISIBLE : View.GONE}" >

        <TextView
            android:id="@+id/textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/itemSmallMargin"
            android:layout_marginEnd="@dimen/itemSmallMargin"
            android:fontFamily="@font/rubik"
            android:textColor="@color/headerText"
            android:textSize="@dimen/headerTextSize"
            android:text="@{obj.text}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="OK Computer" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>